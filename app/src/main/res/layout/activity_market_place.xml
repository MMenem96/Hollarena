<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drowerLayoutMarketPlace"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UsersInfo.navigationdrawer.marketplace.MarketPlaceActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/action_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <TextView
            android:id="@+id/marketPlace_tv"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="200dp"
            android:text="MARKETPLACE"
            android:textAlignment="center"
            android:textSize="20dp" />

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view_market_plae"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_header"
        app:menu="@menu/navigation_market"


        ></android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout><!--app:menu="@menu/navigation_menu"-->