<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/activity_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/tvback"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@color/colorLightBlue"
            android:gravity="center"
            android:text="Profile"
            android:textColor="@color/white" />

        <!--<ImageView-->
        <!--android:id="@+id/back_button"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--android:layout_alignParentStart="true"-->
        <!--android:layout_marginTop="2dp"-->
        <!--android:src="@drawable/ic_back"-->
        <!--android:textColor="@color/white" />-->

    </RelativeLayout>


    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/user_profile_logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_account_circle_for_profile" />

    <TextView
        android:id="@+id/textView_user_profile_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/input_outline"
        android:padding="8dp"
        android:text="User Name"
        android:textColor="@color/black"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/textView_user_profile_user_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/input_outline"
        android:padding="8dp"
        android:text="Phone Number"
        android:textColor="@color/black"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/textView_user_profile_user_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/input_outline"
        android:padding="8dp"
        android:text="Gender"
        android:textColor="@color/black"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/textView_user_profile_user_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/input_outline"
        android:padding="8dp"
        android:text="Age"
        android:textColor="@color/black"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:gravity="center">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/message_floating_btn"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_message"
            app:backgroundTint="@color/colorLightBlue"
            android:layout_marginRight="20dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/holla_request_floating_btn"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_hollas_request"
            app:backgroundTint="@color/colorLightBlue" />
    </LinearLayout>

</LinearLayout>